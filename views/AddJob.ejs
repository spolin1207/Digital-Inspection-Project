<!doctype html>
<html lang="en">

<head>
    <link rel="stylesheet" href="/pure-min.css">
    <link rel="stylesheet" href="/addjob.css">
    <link rel="stylesheet" href="/styles.css">

</head>

<body>
    <%- include('partials/Navbar', {data: '' }); %>
    <div id="layout">
        <!-- Menu toggle -->
        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>

        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="#company">Main</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item"><a href="/" class="pure-menu-link">Home</a></li>
                    <li class="pure-menu-item"><a href="#about" class="pure-menu-link">About</a></li>

                    <li class="pure-menu-item menu-item-divided pure-menu-selected">
                        <a href="#" class="pure-menu-link">Services</a>
                    </li>

                    <li class="pure-menu-item"><a href="#contact" class="pure-menu-link">Contact</a></li>
                </ul>
            </div>
        </div>

        <div id="main">
            <div class="header">
                <h1>Node to SQL Test</h1>
                <h2>Test connection between Nodejs and SQL backend</h2>
            </div>

            <div class="content">
                <div>
                    <form id="sqldata" class="pure-form pure-form-aligned">
                        <fieldset>
                            <div class="pure-control-group">
                                <label for="job_number">Job Number</label>
                                <input type="text" id="job_number" placeholder="Job Number" />
                            </div>

                            <div class="pure-control-group">
                                <label for="job_file_input"></label>
                                <input type="file" id="job_file_input" multiple />
                            </div>

                            <div class="pure-control-group">
                                <label for="job_files">Job Files</label>
                                <textarea class="pure-input-3-4" id="job_files" placeholder="Job Files" ></textarea>
                            </div>

                            <div class="pure-control-group">
                                <label for="job_data">Job Data</label>
                                <textarea class="pure-input-3-4" id="job_data" placeholder="Job Data"></textarea>
                            </div>

                            <div class="pure-control-group">
                                <label for="job_inspection">Job Inspection</label>
                                <textarea class="pure-input-3-4" id="job_inspection" placeholder="Job Inspection"></textarea>
                            </div>

                            <div class="pure-controls">
                                <input type="button" id="sql-add" class="button-success pure-button" value="Add / Edit in SQL" />
                                <!--<button id="sql-add" class="button-success pure-button">Add / Edit in SQL</button>-->
                                <button id="sql-lookup" class="button-warning pure-button">SQL Lookup</button>
                                <button id="sql-delete" class="button-error pure-button">SQL Delete</button>
                            </div>
                        </fieldset>
                    </form>

                </div>
            </div>
        </div>
    </div>

    <script src="scripts.js"></script>
    <script src="ui.js"></script>

</body>

</html>